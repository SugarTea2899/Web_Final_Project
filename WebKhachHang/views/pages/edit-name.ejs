<head>
    <% include ../header.ejs %>
    
</head>

<body class="bg-white">

    <% include ../main-menu.ejs %>
    <!--================Home Banner Area =================-->
    <% include ../breadcrumb.ejs %>

    <!--================login_part Area =================-->
    <section class="login_part section_padding">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_text text-center">
                        <div class="login_part_text_iner">
                            <h2>Winter Shop</h2>
                            <p>Có rất nhiều sản phẩm phù hợp với bạn.</p>
                            <a href="/category" class="btn_3">Mua ngay?</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_form">
                        <div class="login_part_form_iner">
                            <h3>Thay đổi tên</h3>
                            <form class="row contact_form"  method="post" novalidate="novalidate" onsubmit="return validateForm();">
                                <div class="col-md-12 form-group p_star">
                                    <input type="text" class="form-control" id="name" name="username" value="<%= username%>"
                                        placeholder="Tên người dùng...">
                                </div>
                                <div class="col-md-12 form-group">
                                    <button type="submit" value="submit" class="btn_3">
                                        Gửi
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        function validateForm(){
            const name = document.getElementById('name');
            if (name == "")
            {
                alert('Lỗi: Thông tin rỗng.');
                return false;
            }
            return true;
        }
    </script>

    <% include ../footer.ejs %>

    <% include ../script.ejs %>
</body>