<!DOCTYPE html>
<html lang="vi">

<head>
    <% include ../elements/header.ejs %>
        
</head>

<body class="animsition" style="background: #e5e5e5">
    <div>
        <div>
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="/">
                                <img src="images/icon/logo.png" alt="CoolAdmin">
                            </a>
                        </div>
                        <div class="login-form">
                            <form method="post" name="registerForm" onsubmit="return validateForm()">
                                <div class="form-group">
                                    <label>Họ và tên</label>
                                    <input class="au-input au-input--full" type="text" name="fullName" placeholder="Họ và tên">
                                    <output id="name-error" style="color: red"> </output>
                                </div>
                                <div class="form-group">
                                    <label>Tên đăng nhập</label>
                                    <input class="au-input au-input--full" type="text" name="username" placeholder="Tên đăng nhập">
                                    <output id="username-error" style="color: red"></output>
                                </div>
                                <div class="form-group">
                                    <label>Địa chỉ Email</label>
                                    <input class="au-input au-input--full" type="email" name="email" placeholder="Email">
                                    <output id="email-error" style="color: red"> </output>
                                </div>
                                <div class="form-group">
                                    <label>Mật khẩu</label>
                                    <input class="au-input au-input--full" type="password" name="password" placeholder="Mật khẩu">
                                    <output id="password-error" style="color: red"></output>
                                </div>
                                <div class="form-group">
                                    <label>Xác nhận mật khẩu</label>
                                    <input class="au-input au-input--full" type="password" name="password-repeat" placeholder="Xác nhận mật khẩu">
                                    <output id="confirm-password-error" style="color: red"></output>
                                </div>
                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Đăng ký</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Jquery JS-->
    <script src="vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="vendor/slick/slick.min.js">
    </script>
    <script src="vendor/wow/wow.min.js"></script>
    <script src="vendor/animsition/animsition.min.js"></script>
    <script src="vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="vendor/circle-progress/circle-progress.min.js"></script>
    <script src="vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="vendor/select2/select2.min.js">
    </script>

    <!-- Main JS-->
    <script src="js/main.js"></script>

    <% if (isSameUser) { %>
		<script>
			alert("Tên tài khoản đăng ký bị trùng");
		</script>
    <% } %>
    
    <script>
        function validateForm() {
            document.getElementById('name-error').innerText = "";
            document.getElementById('username-error').innerText = "";
            document.getElementById('email-error').innerText = ""; 
            document.getElementById('password-error').innerText = "";
            document.getElementById('confirm-password-error').innerText = "";

            var fullName = document.forms["registerForm"]["fullName"].value;
            var username = document.forms["registerForm"]["username"].value;
            var email = document.forms["registerForm"]["email"].value;
            var password = document.forms["registerForm"]["password"].value;
            var password_repeat = document.forms["registerForm"]["password-repeat"].value;
            var count = 0;

            if (fullName == "") {
                document.getElementById('name-error').innerText = "Chưa nhập họ và tên.";
                count++;
            }

            if (username == "") {
                document.getElementById('username-error').innerText = "Chưa nhập tên đăng nhập.";
                count++
            }

            if (email == "") {
                document.getElementById('email-error').innerText = "Chưa nhập email.";
                count++;
            }

            if (password == "") {
                document.getElementById('password-error').innerText = "Chưa nhập mật khẩu.";
                count++;
            }
            else if (password.length < 6) {
                document.getElementById('password-error').innerText = "Mật khẩu phải có ít nhất 6 ký tự.";
                count++;
            }

            if (password_repeat == "") {
                document.getElementById('confirm-password-error').innerText = "Chưa xác nhận mật khẩu.";
                count++;
            }
            else if (password_repeat != password) {
                document.getElementById('confirm-password-error').innerText = "Xác nhận mật khẩu không chính xác.";
                count++;
            }

            if (count > 0) {
                alert("Thông tin không hợp lệ!");
                return false;
            }
        }
    </script>

</body>

</html>
<!-- end document-->